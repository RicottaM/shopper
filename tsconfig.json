{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "lib": [
      "ESNext",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ],
      "@/*": [
        "src/*"
      ]
    },
    "removeComments": false
  },
  "include": [
    "./src/**/*.ios.ts",
    "./src/**/*.android.ts"
  ],
  "files": [
    "./src/main.ts",
    "./references.d.ts",
    "./src/polyfills.ts"
  ],
  "exclude": [
    "node_modules",
    "platforms"
  ]
}